<Window x:Class="winNetApp.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:winNetApp"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <WrapPanel Orientation="Vertical">
        <StackPanel>
            <TextBox x:Name="InputText" TextWrapping="Wrap" Text="TextBox" Width="430" Height="100" Margin="10,10,10,10" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
            <Button x:Name="SaveButton" Content="保存" Width="150" Height="20" HorizontalAlignment="Left" Margin="10,0,0,10" Click="SaveButton_Click"/>
        </StackPanel>
        <StackPanel>
            <Button x:Name="LaodButton" Content="開く" Width="150" Height="20" HorizontalAlignment="Left" Margin="10,10,0,0"/>
            <TextBox x:Name="LaodText" TextWrapping="Wrap" Text="TextBox" Width="430" Height="100" Margin="10,10,10,10" VerticalScrollBarVisibility="Visible" IsReadOnly="True"/>
        </StackPanel>
        <CheckBox Content="CheckBox"/>
        <CheckBox Content="CheckBox"/>
        <CheckBox Content="CheckBox"/>
        <CheckBox Content="CheckBox"/>
    </WrapPanel>
</Window>
